@model IEnumerable<TruYumCaseStudyMvc.Models.MenuItem>

@{
    ViewBag.Title = "MenuItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string titleList = " ";
    
    if (ViewBag.isAdmin == true)
    {

        titleList = "Admin";
    }
    else
    {

        titleList = "Customer";
    }


}

<h2>@titleList MenuItems</h2>

@if(ViewBag.isAdmin==true)
{

<p>
    @Html.ActionLink("Create New", "Create")
</p>
}
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.GetCategory.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>

        @if (@ViewBag.isAdmin == true)
        {

            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dof)
            </th>
        }

        <th>
            @Html.DisplayNameFor(model => model.free)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.GetCategory.Name)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>

    @if (ViewBag.isAdmin == true)
    {

        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dof)
        </td>
    }
    <td>
        @Html.DisplayFor(modelItem => item.free)
    </td>

    @if (ViewBag.isAdmin == true)
    {

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    }
    else
    {
        <td>

            @Html.ActionLink("Add to Cart", "AddCart","Carts", new { id = item.Id },null)
        </td>
    }
</tr>
}

</table>
