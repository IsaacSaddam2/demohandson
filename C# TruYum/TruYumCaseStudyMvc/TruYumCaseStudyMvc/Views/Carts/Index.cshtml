@model IEnumerable<TruYumCaseStudyMvc.Models.Cart>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    double sum = Model.Sum(c => c.GetMenuItem.Price);
}

<h2>View Cart</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GetMenuItem.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GetMenuItem.free)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.GetMenuItem.Price)
        </th>
        <th>
            Action
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GetMenuItem.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GetMenuItem.free)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GetMenuItem.Price)
            </td>
            <td>

                @Html.ActionLink("Delete", "Delete", new { id = item.Id },null)
            </td>
        </tr>
    }
    <tr>
        <td>
            
        </td>
        <td>
           
           Total price:
        </td>
        <td>
            Rs. @sum
        </td>
        <td>
          
        </td>
    </tr>

</table>
<div class="form-actions no-color">
   
    @Html.ActionLink("Back to List", "Index","MenuItems")
</div>
